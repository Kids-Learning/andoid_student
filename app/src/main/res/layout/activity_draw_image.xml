<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawImage">

    <com.example.kids_learning.DrawingViewnew
        android:id="@+id/writingViewnew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/writeDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/letswritewrite"
        app:layout_constraintVertical_bias="0.864"
        tools:ignore="MissingClass,UnknownIdInLayout" />

    <ImageView
        android:id="@+id/button11"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="299dp"
        android:layout_marginRight="299dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/writingViewnew"
        app:layout_constraintStart_toStartOf="@+id/writingViewnew"
        app:srcCompat="@drawable/cancel" />

    <ImageView
        android:id="@+id/button13"
        android:layout_width="77dp"
        android:layout_height="67dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:srcCompat="@drawable/reset" />

    <ImageView
        android:id="@+id/savedraw"
        android:layout_width="77dp"
        android:layout_height="67dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button13"
        app:srcCompat="@drawable/save" />

</androidx.constraintlayout.widget.ConstraintLayout>